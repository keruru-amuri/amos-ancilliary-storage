{
  "platform": {
    "apiRuntime": "node:20"
  },
  "networking": {
    "allowedIpRanges": []
  },
  "routes": [
    {
      "route": "/",
      "redirect": "/amos-cloudstore"
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/amos-cloudstore"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=/amos-cloudstore"
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/amos-cloudstore/index.html",
    "exclude": ["/api/*", "/assets/*", "/amos-cloudstore/assets/*", "/*.{css,scss,js,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,json}"]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, PATCH, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/amos-cloudstore",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/amos-cloudstore/index.html",
      "statusCode": 403
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}
