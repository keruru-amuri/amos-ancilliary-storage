{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/amos-cloudstore/api/*",
      "rewrite": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/",
      "redirect": "/amos-cloudstore"
    }
  ],
  "navigationFallback": {
    "rewrite": "/amos-cloudstore/index.html",
    "exclude": ["/api/*", "/assets/*", "/amos-cloudstore/assets/*", "/*.{css,scss,js,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,json}"]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, PATCH, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}
